<?xml version="1.0"?>
<faces-config version="2.0" xmlns="http://java.sun.com/xml/ns/javaee"
 xmlns:xi="http://www.w3.org/2001/XInclude"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
 <navigation-rule>
  <from-view-id>/faces/form/listForms.xhtml</from-view-id>
  <navigation-case>
   <from-outcome>viewForm</from-outcome>
   <to-view-id>/faces/form/viewForm.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <from-view-id>/faces/form/editForm.xhtml</from-view-id>
  <navigation-case>
   <from-outcome>success</from-outcome>
   <to-view-id>/faces/form/viewForm.xhtml</to-view-id>
  </navigation-case>
  <navigation-case>
   <from-outcome>error</from-outcome>
   <to-view-id>/faces/form/editForm.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <from-view-id>/faces/answer/editAnswer.xhtml</from-view-id>
  <navigation-case>
   <from-outcome>success</from-outcome>
   <to-view-id>/faces/answer/viewAnswer.xhtml</to-view-id>
  </navigation-case>
  <navigation-case>
   <from-outcome>error</from-outcome>
   <to-view-id>/faces/answer/editAnswer.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <from-view-id>/faces/answer/listAnswers.xhtml</from-view-id>
  <navigation-case>
   <from-outcome>viewAnswer</from-outcome>
   <to-view-id>/faces/answer/viewAnswer.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <from-view-id>/faces/home/home.xhtml</from-view-id>
  <navigation-case>
   <from-outcome>newForm</from-outcome>
   <to-view-id>/faces/form/editForm.xhtml</to-view-id>
  </navigation-case>
  <navigation-case>
   <from-outcome>listForms</from-outcome>
   <to-view-id>/faces/form/listForms.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <from-view-id>/faces/form/viewForm.xhtml</from-view-id>
  <navigation-case>
   <from-outcome>listAnswers</from-outcome>
   <to-view-id>/faces/answer/listAnswers.xhtml</to-view-id>
  </navigation-case>
  <navigation-case>
   <from-outcome>newAnswer</from-outcome>
   <to-view-id>/faces/answer/editAnswer.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <navigation-rule>
  <from-view-id>*</from-view-id>
  <navigation-case>
   <from-outcome>goHome</from-outcome>
   <to-view-id>/faces/home/home.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule>
 <application>
  <resource-bundle>
   <base-name>br.unifesp.maritaca.web.commons.msg.messages</base-name>
   <var>msgs</var>
  </resource-bundle>
 </application>
</faces-config>
